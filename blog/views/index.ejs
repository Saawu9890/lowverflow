<% include layouts/header %>
<div class="jumbotron features">
	<div class="container">
		<div class="row">
		<center><h3>lawverflow is Q&A communities. Here's how:</h3></center>
		<br>
		<br>
		<br>
			<div class="col-md-4">
				<center><i class="fa fa-question-circle fa-5x" style="color:#515A61"></i></center>
				<br>
				<center>① Lawverflow is Q&A platform for searching law information.</center>
			</div>

			<div class="col-md-4">
				<center><i class="fa fa-hand-o-up fa-5x" style="color:#515A61"></i></center>
				<br>
				<center>② This is law search engine.</center>
			</div>

			<div class="col-md-4">
				<center><i class="fa fa-stack-exchange fa-5x" style="color:#515A61"></i></center>
				<br>
				<center>③ Lawverflow is like a stackoverflow(It is programming Q&A site.)</center>
			</div>
		</div>
	</div>
</div>

<div class="container-fluid strip">
  <div class="row row-contents">

  	<div class="col-sm-1 sidebar">
  		padding
    </div>
<div class="col-sm-8">
  <ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#menu0">New</a></li>
    <li><a data-toggle="tab" href="#menu1">Feartured</a></li>
    <li><a data-toggle="tab" href="#menu2">Hot</a></li>
    <li><a data-toggle="tab" href="#menu3">Question</a></li>
  </ul>

  <div class="tab-content">
    <div id="menu0" class="tab-pane fade in active">
	    <div class="col-sm-8">
			<h4><strong>Today's Questions</strong></h4>
			<hr>
			<% Question.forEach(function(question){ %>
				<li style="list-style:none;">
					Subject : <%= question.subject %>
					<br>
					Content : <strong><a href="/question/<%= question.id %>"><%= question.content %></a></strong>
					<a href="/question/delete/<%= question.id %>" onClick="delete_confirm()">x</a>
					<a href="/question/edit/<%= question.id %>">Edit</a>
					<hr>
				</li>
			<% }) %>
	    </div>
    </div>
    
    <div id="menu1" class="tab-pane fade">
	    <h3>Feartured</h3>
	    <p>feartured</p>
    </div>
    
    <div id="menu2" class="tab-pane fade">
	    <h3>Hot</h3>
	    <p>Hot</p>
    </div>
    
    <div id="menu3" class="tab-pane fade">
	    <h3>Question</h3>
			<form name="tag" method="POST" action="/tag/create">
				<p><label>Tag...</label>
					<input type="text" name="tag">
				</p>
			</form>

			<form name="category" method="POST" action="/category/create">
				<p><label>Category...</label>
					<input type="text" name="category">
				</p>
			</form>

			<form name="question" method="POST" action="/question/create">
				<p><label>Question...</label>
					<input type="text" name="subject">
					<input type="textarea" name="content">
				</p>
			</form>

			<input type="submit" value="submit" onClick="send()">
	</div>
  </div>
</div>


    <div class="col-sm-2">
        <div class="sidebar-title">
        <center><p class="sidebar-text">sidebar here</p></center>
        	<div class="sidebar-right">
				<% Question.forEach(function(question){ %>
					<option value=""><a href="/question/<%= question.id %>"><%= question.subject %></a></option>
					<hr>
				<% }) %>
        	</div>
        </div>
    </div>

    <div class="col-sm-1">
    	padding
    </div>
  </div>
</div>


<script language="javascript"><!--
	function delete_confirm() {
	    window.confirm("Delete?");
	};

	function send() {
	document.question.submit();
	document.category.submit();
	document.tag.submit();
	location.href = "/";
};
//--></script>

<% include layouts/footer %>